<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Profile_Fragment"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/profile_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Profile"
        android:textColor="#E723135D"
        android:textSize="34dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/profile_image_view"
        android:layout_width="158dp"
        android:layout_height="111dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/round_corner_outline_button"
        android:foregroundGravity="center"
        android:src="@drawable/profile_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/profile_text" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text=" Name"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image_view"
        android:textStyle="bold"
        android:textColor="@color/purple_500"/>

    <TextView
        android:id="@+id/profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text=" Email"
        android:textColor="#6424C0"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_name"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/createprofilelayout"
        android:layout_width="381dp"
        android:layout_height="345dp"
        android:layout_marginTop="32dp"
        android:padding="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_email"
        android:visibility="gone">

        <TextView
            android:id="@+id/profile_create_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Profile"
            android:textColor="#030303"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="140dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/profile_edit_mobileNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_outline_button"
            android:hint="Mobile No."
            android:textColor="@color/purple_500"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_create_panel"
            tools:layout_editor_absoluteX="98dp"
            tools:layout_editor_absoluteY="65dp" />

        <EditText
            android:id="@+id/profile_edit_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:background="@drawable/round_corner_outline_button"
            android:hint="Address"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_edit_mobileNo" />

        <EditText
            android:id="@+id/profile_edit_mobileNoSecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:background="@drawable/round_corner_outline_button"
            android:hint="Second Mobile No."
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_edit_address" />


        <TextView
            android:id="@+id/profile_Save"
            android:layout_width="112dp"
            android:layout_height="61dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_corner_button_solid"
            android:gravity="center"
            android:paddingStart="@dimen/cardview_compat_inset_shadow"
            android:text="Save"
            android:textColor="@color/purple_500"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_edit_mobileNoSecond" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profilelayout"
        android:layout_width="374dp"
        android:layout_height="354dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_email"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/profile_create_panel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="#030303"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/profile_edit_address2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text=" Address:"
            android:textColor="@color/purple_500"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_create_panel2" />

        <TextView
            android:id="@+id/profile_primary_mobileNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text=" Primary Mobile No.:"
            android:textColor="@color/purple_500"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_edit_address2" />

        <TextView
            android:id="@+id/profile_secondary_mobileNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text=" Secondary Mobile No.:"
            android:textColor="@color/purple_500"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_primary_mobileNo" />

        <TextView
            android:id="@+id/profile_Edit"
            android:layout_width="112dp"
            android:layout_height="61dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/round_corner_button_solid"
            android:gravity="center"
            android:paddingStart="@dimen/cardview_compat_inset_shadow"
            android:text="Edit"
            android:textColor="@color/purple_500"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.452"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_secondary_mobileNo" />

        <TextView
            android:id="@+id/address1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="32dp"
            android:text="........."
            android:textColor="#262146"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/profile_edit_address2"
            app:layout_constraintTop_toBottomOf="@+id/profile_create_panel2"
            android:background="@drawable/round_corner_outline_button"/>

        <TextView

            android:id="@+id/primarymobileno1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="......"
            android:textColor="#251F38"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/profile_primary_mobileNo"
            app:layout_constraintTop_toBottomOf="@+id/profile_edit_address2"
            android:background="@drawable/round_corner_outline_button"/>

        <TextView
            android:id="@+id/secondarymobileno1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="....."
            android:textColor="#22224C"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/profile_secondary_mobileNo"
            app:layout_constraintTop_toBottomOf="@+id/profile_primary_mobileNo"
            tools:layout_editor_absoluteX="266dp"
            android:background="@drawable/round_corner_outline_button"/>

        <ProgressBar
            android:id="@+id/progressbar5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_create_panel2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

