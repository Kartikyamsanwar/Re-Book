<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.SellFragment"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="12dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/sellyourbook_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="SELL YOUR BOOK"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Name of Book:"
                android:textColor="@color/purple_500" />

            <EditText
                android:id="@+id/sell_name"
                android:layout_width="0dp"
                android:layout_weight="2.8"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_outline_button"
                android:textColor="@color/purple_200" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Standard :"
                android:textColor="@color/purple_500" />

            <EditText
                android:layout_width="0dp"
                android:layout_weight="3"
                android:id="@+id/sell_standard"

                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_outline_button"
                android:textColor="@color/purple_200" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Medium :"
                android:textColor="@color/purple_500" />

            <EditText
                android:layout_width="0dp"
                android:layout_weight="3"
                android:id="@+id/sell_medium"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_outline_button"
                android:textColor="@color/purple_200" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="MRP :"
                android:textColor="@color/purple_500" />

            <EditText
                android:id="@+id/sell_mrp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/round_corner_outline_button"
                android:textColor="@color/purple_200" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Selling Price :"
                android:textColor="@color/purple_500" />

            <EditText
                android:id="@+id/sell_price"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_outline_button"
                android:textColor="@color/purple_200" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Condition:"
                android:textColor="@color/purple_500" />

            <EditText
                android:id="@+id/sell_condition"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_outline_button"
                android:textColor="@color/purple_200" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <CheckBox
                android:id="@+id/sell_cod"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:enabled="true"
                android:text="COD"
                android:textColor="@color/purple_500"
                android:clickable="true"
                />

            <CheckBox
                android:id="@+id/sell_return"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="true"
                android:text="Return"
                android:textColor="@color/purple_500"
                android:clickable="true"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Delivery time :"
                android:textColor="@color/purple_500" />

            <EditText
                android:id="@+id/sell_delivery"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_outline_button"
                android:textColor="@color/purple_200" />
        </LinearLayout>


        <TextView
            android:id="@+id/sell_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/round_corner_button_solid"
            android:gravity="center"
            android:text="Upload"
            android:textColor="@color/purple_500"
            android:textSize="25sp"
            android:layout_marginTop="24dp"
           />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sell_progressbar"
            android:layout_gravity="center"
            android:visibility="gone"
            />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
